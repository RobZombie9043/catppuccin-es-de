<themeCapabilities>
   
	<themeName>Catppuccin</themeName>
   
	<!--
	///
	Aspect Ratios
	///
	-->
	<aspectRatio>1:1</aspectRatio>
	<aspectRatio>8:7</aspectRatio>
	<aspectRatio>5:4</aspectRatio>
	<aspectRatio>4:3</aspectRatio>
	<aspectRatio>3:2</aspectRatio>
	<aspectRatio>16:10</aspectRatio>
	<aspectRatio>16:9</aspectRatio>
	<aspectRatio>19.5:9</aspectRatio>
	<aspectRatio>21:9</aspectRatio>
		
	<!--
	///
	Font Size
	///
	-->
	<!-- <fontSize>small</fontSize> -->
	<fontSize>medium</fontSize>
	<fontSize>large</fontSize>
		
	<!--
	///
	Transitions
	///
	-->
	<transitions name="transitions">
		<label>transitions</label>
		<selectable>false</selectable>
		<systemToSystem>instant</systemToSystem>
		<systemToGamelist>instant</systemToGamelist>
		<gamelistToGamelist>slide</gamelistToGamelist>
		<gamelistToSystem>instant</gamelistToSystem>
		<startupToSystem>fade</startupToSystem>
		<startupToGamelist>fade</startupToGamelist>
	</transitions>
	<suppressTransitionProfiles>
		<entry>builtin-instant</entry>
		<entry>builtin-slide</entry>
		<entry>builtin-fade</entry>
	</suppressTransitionProfiles>
   
	<!--
	///
	Variants
	///
	-->
	<variant name="grid-grid">
		<label>[Grid] Grid</label>
		<selectable>true</selectable>
	</variant>
	
	<variant name="grid-textlist-cover">
		<label>[Grid] List (Boxart)</label>
		<selectable>true</selectable>
	</variant>
	
	<variant name="grid-textlist-miximage">
		<label>[Grid] List (Miximage)</label>
		<selectable>true</selectable>
	</variant>
	
	<variant name="textlist-grid">
		<label>[List] Grid</label>
		<selectable>true</selectable>
	</variant>
	
	<variant name="textlist">
		<label>[List] List</label>
		<selectable>false</selectable>
	</variant>
	
	<variant name="textlist-textlist-cover">
		<label>[List] List (Boxart)</label>
		<selectable>true</selectable>
		<override>
			<trigger>noMedia</trigger>
			<mediaType>cover</mediaType>
			<useVariant>textlist</useVariant>
		</override>
	</variant>
	
	<variant name="textlist-textlist-miximage">
		<label>[List] List (Miximage)</label>
		<selectable>true</selectable>
		<override>
			<trigger>noMedia</trigger>
			<mediaType>miximage</mediaType>
			<useVariant>textlist</useVariant>
		</override>
	</variant>

	<!--
	///
	Color Schemes
	///
	-->
	<colorScheme name="latte">
        <label>Latte</label>
    </colorScheme>
	<colorScheme name="frappe">
        <label>Frapp√©</label>
    </colorScheme>
	<colorScheme name="macchiato">
        <label>Macchiato</label>
    </colorScheme>
	<colorScheme name="mocha">
        <label>Mocha</label>
    </colorScheme>
	
</themeCapabilities>